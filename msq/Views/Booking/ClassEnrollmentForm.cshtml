@model msq.Models.Student

<h1>Class Enrollment Form</h1>
<hr><br>
<div class="row">
    <div class="col-md-4">
        <form asp-action="ClassEnrollmentForm" method="post">
            <div asp-validation-summary="ModelOnly class="text-danger">
            <div class="form-group">
                <label asp-for="Name" class="contol-label"></label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="contol-label"></label>
                <input asp-for="Email" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ClassId" class="contol-label"></label>
                <input asp-for="ClassId" class="form-control" readonly>
                <span asp-validation-for="ClassId" class="text-danger"></span>
            </div>
            </div>
        </form>
    </div>
</div>